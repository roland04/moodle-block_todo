{{!
    @template block_todo/local/todolistitem

    This template renders the main content area for the TODO block.

    Example context (json):
    {
        "id": 1,
        "name": "Todo 1",
        "done": false,
        "examplecontext": true
    }
}}
{{#examplecontext}}<ul>{{/examplecontext}}

<li id="block-todo-list-item-{{uniqid}}-{{id}}"
    class="list-group-item d-flex align-items-center justify-content-between todo-list-item"
    data-for="todo"
    data-id="{{id}}">

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="customCheck{{id}}" data-for="todo-check" {{#done}}checked{{/done}}>
        <label class="form-check-label todo-name" for="customCheck{{id}}" data-for="todo-name">
            {{name}}
        </label>
    </div>

    <button class="btn btn-link px-0 me-0 icon-no-margin"
            data-action="delete-todo"
            title="Delete todo"
            aria-label="delete todo">
        {{#pix}} i/trash, core {{/pix}}
    </button>

</li>

{{#examplecontext}}</ul>{{/examplecontext}}
{{#js}}
require(['block_todo/local/components/todolistitem'], function(component) {
    component.init('#block-todo-list-item-{{uniqid}}-{{id}}');
});
{{/js}}